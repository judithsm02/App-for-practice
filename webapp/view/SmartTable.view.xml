<mvc:View xmlns:table="sap.ui.table" xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="practiceapp.practicej.controller.SmartTable">


<!-- ##############    SMART FILTER   ######################## -->

<smartFilterBar:SmartFilterBar id="SmartFilterFlights" entitySet="UX_C_Connection_TPType" enableBasicSearch="true">

 <smartFilterBar:controlConfiguration>
                    <!-- ******************* FILTROS *********************************** -->

                    <smartFilterBar:ControlConfiguration id="Country" key="Country" label="Carrid" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false" hasValueHelpDialog="false" mandatory="notMandatory"/>
                    
                </smartFilterBar:controlConfiguration>

</smartFilterBar:SmartFilterBar>


<!-- ##############    SMART TABLE   ######################## -->
<smartTable:SmartTable id="smarttable" entitySet="UX_C_Connection_TPType" smartFilterId="SmartFilterFlights" tableType="ResponsiveTable" enableExport="true" beforeExport="onBeforeExport" useVariantManagement="false" useTablePersonalisation="true" header="More about flights - Connections" showRowCount="true" demandPopin="true" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true" requestAtLeastFields="Carrid, Connid, Deptime" items="{/UX_C_Connection_TP}" beforeRebindTable="onBeforeRebindTable">

  <smartTable:layoutData> 
  <!-- es fa perque la taula creixi pero el filter bar es quedi fixe -->
        <FlexItemData growFactor="1" id="1.4"/>
 </smartTable:layoutData>



 
     <Table id="TableConnections" mode="SingleSelectMaster" growingThreshold="20" growingScrollToLoad="true" selectionChange="onPressObject">

        <columns> 
            <Column id="Connection_ID_Column" hAlign="Begin"> 
                <Text id="Connection_ID_Text" text="Connection ID"/>
            </Column>
          
            
            <Column id="Carrier_ID_Column" hAlign="Begin"> 
                <Text id="Carrier_ID_Text" text="Carrier ID"/>
            </Column>

             <Column id="CityFrom_Column" hAlign="Begin"> 
                <Text id="CityFrom_Text" text="City From"/>
            </Column><Column id="CityTo_Column" hAlign="Begin"> 
                <Text id="CityTo_Text" text="City From"/>
            </Column>  
            
                     
         </columns>  

        <items>
            <ColumnListItem id="ColumnListItem1">
                <cells>
                    <ObjectIdentifier id="ObjectIdentifier1" text="{Connid}"/><Text id="colum2" text="{Carrid}"/>
                    <Text id="colum3" text="{Cityfrom}"/>
                    <Text id="colum4" text="{Cityto}"/>
                </cells>
            </ColumnListItem>
        </items> 
    
    </Table> 


</smartTable:SmartTable>


</mvc:View>